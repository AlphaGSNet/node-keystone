	.stripe
		.userinfo
			if user
				strong user.name
				if user.canAccessKeystone
					a(href='/keystone') Admin
				a(href='/keystone/logout') SIGN OUT
			else
				a(href='/keystone/login') SIGN IN
	.container
		.row
			.col-sm-4
				ul.nav.nav-links
					li
						a.rclickable.rclickable--yellow-down(href="/") WELCOME
