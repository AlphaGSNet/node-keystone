<%
pageTitle = "Sign In"
%>
<% include ../layouts/top.ejs %>
<header class="login"></header>
<section class="section section--login">
  <div class="loginbox">
    <img src="images/logo.png" />
    <h1 class="title">Sign in to access</h1>

    <% if (message.length > 0) { %>
      <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <form class="horizantal-form" action="/login" method="post">
      <div class="form-group">
        <input type="text" name="email" value="<%= submitted.email? submitted.email: '' %>" placeholder="Email"/>
      </div>
      <div class="form-group">
        <input type="password" name="password" placeholder="Passwrord"/>
      </div>
      <div class="form-group">
        <input type="submit" class="btn btn-signin" value="sign in" />
      </div>

      <p class="link"><a href="/forgot">forgot password?</a></p>
      <p class="link"><a href="/signup">go to signup</a></p>

    </form>

  </div>
</section>

<% include ../layouts/bottom.ejs %>
